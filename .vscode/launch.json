{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Remote Attach",
        "type": "python",
        "request": "attach",
        "connect": {
          "host": "localhost",  // Use the IP address if the remote process is on a different machine
          "port": 5678          // The port used by debugpy in the running process
        },
        "pathMappings": [
          {
            "localRoot": "C:\\Users\\rmarr\\Documents",  // Local path of the source code in your workspace
            "remoteRoot": "C:\\Users\\rmarr\\Documents"                   // Remote path where the Python code is running
          }
        ]
      }
    ]
}